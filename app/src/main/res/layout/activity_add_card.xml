<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addCardActivity">

    <ImageView
        android:id="@+id/cancelCardScreen"
        android:layout_width="86dp"
        android:layout_height="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/ic_launcher_cancel" />

    <ImageView
        android:id="@+id/saveCardScreen"
        android:layout_width="86dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cancelCardScreen"
        android:layout_marginStart="16dp"
        android:src="@mipmap/ic_launcher_save" />

    <EditText
        android:id="@+id/editTextQuestion"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:hint="Enter The Question Here" />

    <EditText
        android:id="@+id/editTextAnswer"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="158dp"
        android:hint="Enter The Answer Here " />

</RelativeLayout>